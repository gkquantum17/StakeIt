<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gokul.favr_v2.RegisterActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#1d1d1d"

                android:id="@+id/firstName"
                android:hint="First name"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#1d1d1d"

                android:layout_height="wrap_content"
                android:id="@+id/lastName"
                android:hint="Last name"/>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerEmail"
            android:inputType="textEmailAddress"
            android:textColor="#1d1d1d"

            android:hint="Email address"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerUsername"
            android:paddingTop="10dp"
            android:textColor="#1d1d1d"

            android:hint="Username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerPassword"
            android:paddingTop="10dp"
            android:textColor="#1d1d1d"

            android:inputType="textPassword"
            android:hint="Password"/>

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btnFinalRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="15dp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            custom:pb_colorComplete="#4caf50"
            custom:pb_colorNormal="@color/ColorPrimary"
            custom:pb_colorPressed="@color/ColorPrimaryDark"
            custom:pb_colorProgress="@color/ColorAccent"
            custom:pb_textComplete="Success!"
            custom:pb_textProgress="Creating Account..."
            custom:pb_textError="Error"
            custom:pb_colorError="@color/red_error" />


    </LinearLayout>


</RelativeLayout>
