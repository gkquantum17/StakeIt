<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_gravity="center_horizontal"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/minus_stake"
            android:id="@+id/btnMinusStake"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="75dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/quantityText"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/plus_stake"
            android:id="@+id/btnAddStake"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="points"
        android:textSize="25sp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stake For"
            android:background="@drawable/stake_for_button"
            android:textColor="#00CC66"
            android:id="@+id/btnStakeFor"
            android:layout_marginRight="5dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:id="@+id/btnStakeAgainst"
            android:textColor="#FF3333"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stake_against_button"
            android:text="Stake Against"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>