<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gokul.favr_v2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EnableParse"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name=".PostActivity"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterActivity" />
        </activity>
        <activity
            android:name=".MakePostActivity"
            android:label="@string/title_activity_make_post" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeActivity" />
        </activity>
        <activity
            android:name=".PostSettingsActivity"
            android:label="@string/title_activity_post_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MakePostActivity" />
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="@string/title_activity_category" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeActivity" />
        </activity>
        <activity
            android:name=".ThoughtPostDetailsActivity"
            android:label="@string/title_activity_thought_post_details" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeActivity" />
        </activity>
        <activity
            android:name=".DiscoverUserPostsActivity"
            android:label="@string/title_activity_discover_user_posts" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeActivity" />
        </activity>
        <activity
            android:name=".MakeUserDiscoveryPostActivity"
            android:label="@string/title_activity_make_user_discovery_post" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DiscoverUserPostsActivity" />
        </activity>
        <activity
            android:name=".PostDiscSettingsActivity"
            android:label="@string/title_activity_post_disc_settings" >
        </activity>
        <activity
            android:name=".DiscArticleWebViewActivity"
            android:label="@string/title_activity_disc_article_web_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeActivity" />
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeActivity" />
        </activity>
    </application>

</manifest>
